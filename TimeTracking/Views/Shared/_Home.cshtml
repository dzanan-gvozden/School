<body>
    <nav class="navbar navbar-default navbar-fixed-top">
        <a class="navbar-brand" href="#"><img id="img_logo" alt="Logo" src="@Url.Content("~/Content/logo1.png")" height="50" /></a>
        <ul class="nav navbar-nav">
            <li><a class="dugme" href="Management.html">Home</a></li>
            <li class="dropdown">
                <a href="#" class="dropdown-toggle dugme" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Projects <span class="caret"></span></a>
