@model Database.EmployeeEducation

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>EmployeeEducation</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <div class="control-label col-md-2">Employee</div>
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Employee,
               ViewBag.PeopleList as IEnumerable<SelectListItem>,
               new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">Education</div>
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Education,
               ViewBag.EducationsList as IEnumerable<SelectListItem>,
               new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Reference, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Reference, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Reference, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
