@model SkillsLibrary.Models.SkillCategoryModel
@{
    ViewBag.Title = "Delete Category";
}

<div class="db-header clearfix">
    <div class="page-header-title"><span class="glyphicon glyphicon-cog"></span> Delete Category</div>
</div>
<br>
Are you sure you want to delete this category?
<div>
    <br>
    <dl class="dl-horizontal">

        <dd>
            <b>@Html.DisplayFor(model => model.Name)</b>
        </dd>

    </dl>
    <br>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            @Html.ActionLink("Back to List", "EditCategory", new { id = Model.Id })
        </div>
    }
</div>