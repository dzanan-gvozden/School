@model SkillsLibrary.Models.ToolModel

@{
    ViewBag.Title = "Delete Skill";
}

<div class="db-header clearfix">
    <div class="page-header-title"><span class="glyphicon glyphicon-cog"></span> Delete Skill</div>
</div>
<br>
<h5>Are you sure you want to delete this skill?</h5>
<div>
    <br>
    <dl class="dl-horizontal">
        <dt>
            Name:
        </dt>

        <dd>
            <b>@Html.DisplayFor(model => model.Name)</b>
        </dd>

        <dt>
            Category:
        </dt>

        <dd>
            <b>@Html.DisplayFor(model => model.CategoryName)</b>
        </dd>

    </dl>
    <br>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>

