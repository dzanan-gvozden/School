@using System.Data.Entity.Infrastructure
@model ReservationSystem.Models.EventModel
@{
    ViewBag.Title = "CreateRoomRes";
}

<h2>Create Room Reservation</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr/>
        @Html.ValidationSummary(true, "", new {@class = "text-danger"})
        <div class="form-group">
            <div class="control-label col-md-2">Title</div>
            <div class="col-md-6">
                @Html.EditorFor(model => model.EventTitle, new {htmlAttributes = new {@class = "form-control"}})
                @Html.ValidationMessageFor(model => model.EventTitle, "", new {@class = "text-danger"})
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">Person</div>
            <div class="col-md-6">
                @Html.DropDownListFor(model => model.Person, ViewBag.PeopleList as IEnumerable<SelectListItem>, new {@class = "form-control"})
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">Device</div>
            <div class="col-md-6">
                @Html.DropDownListFor(model => model.Resource, ViewBag.ResourceList as IEnumerable<SelectListItem>, new {@class = "form-control", @readonly = "true"})
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">Start Date</div>
            <div class="col-md-6">
                @Html.EditorFor(model => model.StartDate, new {htmlAttributes = new {@class = "form-control", @type = "date"}})
                @Html.ValidationMessageFor(model => model.StartDate, "", new {@class = "text-danger"})
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">End Date</div>
            <div class="col-md-6">
                @Html.EditorFor(model => model.EndDate, new {htmlAttributes = new {@class = "form-control", @type = "date"}})
                @Html.ValidationMessageFor(model => model.EndDate, "", new {@class = "text-danger"})
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </div>
    </div>
}