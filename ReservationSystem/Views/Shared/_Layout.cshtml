<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reservation System</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <header>
        <div class="navbar navbar-default">
            <div class="navbar-header" style="border: 0px;">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="@Url.Action("Index", "Home")">
                    <img src="@Url.Content("~/Content/mistral.png")" id="logo" />
                </a>
                
            </div>

            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav navbar-right">
                    <li class="dropdown">
                        @Html.ActionLink("Resources", "Index", "Resources")
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Rooms", "Rooms", "Reservations")</li>
                            <li>@Html.ActionLink("Devices", "Devices", "Reservations")</li>
                        </ul>
                    </li>
                    
                    <li class="dropdown">
                        @Html.ActionLink("Reservations", "Index", "Reservations")
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Active", "Active", "Reservations")</li>
                        </ul>
                    </li>

                </ul>
            </div>
        </div>
    </header>
    
    <div class="container container-top">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - by Beta Team</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
