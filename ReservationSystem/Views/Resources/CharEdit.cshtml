@model ReservationSystem.Models.CharacteristicModel
@{

    ViewBag.Title = "Edit Characteristics";
}

<h2>Proba</h2>
@using (Html.BeginForm())
{

    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <h4>Characteristics</h4>
        <hr/>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Name)
        @Html.HiddenFor(model => model.Resource)


    

    <div class="form-group">
        <div class="control-label col-md-2">@Model.Name</div>
        <div class="col-md-10">
            @Html.EditorFor(x => Model.Value, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(x => Model.Value, "", new { @class = "text-danger" })
        </div>
    </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default"/>
            </div>
        </div>
</div>
}
<div>
    @Html.ActionLink("Back to List", "Characterstics", new { id = Model.Resource})
</div>

